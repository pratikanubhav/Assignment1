#include<stdio.h>
#include<string.h>
main()
{
	char n1[10],n2[10],n3[10];
	int i=0,j=0;
	int l1=0,l2=0;
	int c=0,k=0;
	
	
	printf("Enter the string\n");
	scanf("%s",n1);
	printf("Enter the word\n");
	scanf("%s",n2);
	
	l1=strlen(n1);
	l2=strlen(n2);
	
	for(i=0;i<=l1-l2;i++)
	{
		for(j=i;j<i+l2;j++)
		{
		
		
		if( n2[j-i]==n1[j])
		
             c=1;
        
	    
		else
		   
		    c=0;
	}
	if(c==1)
	
	break;
	k=j;
	
	
}

	if(c==1)
	printf("word is a part of this string\n");
	if(c==0)
	printf("word is not a part of this string\n");
	printf("The position of this string is %d,k\n");
}



